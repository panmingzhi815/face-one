<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>

<AnchorPane stylesheets="@../css/bootstrapfx.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.yinuo.controller.DeviceController">
   <children>
      <BorderPane minHeight="600.0" minWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <FlowPane hgap="10.0" vgap="10.0" BorderPane.alignment="CENTER">
               <children>
                  <TextField prefHeight="30.0" prefWidth="100.0" promptText="设备编号" />
                  <TextField prefHeight="30.0" prefWidth="100.0" promptText="设备名称" />
                  <ComboBox fx:id="deviceStatus" prefHeight="30.0" prefWidth="100.0" promptText="设备状态" />
                  <ComboBox fx:id="deviceGroups" prefHeight="30.0" prefWidth="100.0" promptText="所属分组" />
                  <Button mnemonicParsing="false" prefHeight="30.0" text="查询">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-primary" />
                     </styleClass>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="30.0" text="刷新">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-primary" />
                     </styleClass></Button>
               </children>
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </FlowPane>
         </top>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <center>
            <TableView tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn prefWidth="150.0" text="设备编号" />
                <TableColumn prefWidth="100.0" text="设备名称" />
                  <TableColumn prefWidth="100.0" text="设备类型" />
                  <TableColumn prefWidth="150.0" text="所属分组" />
                  <TableColumn prefWidth="100.0" text="设备状态" />
                  <TableColumn prefWidth="200.0" text="更新日期" />
              </columns>
               <BorderPane.margin>
                  <Insets bottom="10.0" top="10.0" />
               </BorderPane.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
         <bottom>
            <FlowPane hgap="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" text="新增设备">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-success" />
                     </styleClass></Button>
                  <Button mnemonicParsing="false" text="删除设备">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-danger" />
                     </styleClass>
                  </Button>
                  <Button mnemonicParsing="false" text="从excel导入">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-primary" />
                     </styleClass>
                  </Button>
                  <Button mnemonicParsing="false" text="导出到excel">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-primary" />
                     </styleClass>
                  </Button>
               </children>
            </FlowPane>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
