<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane stylesheets="@../css/bootstrapfx.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.yinuo.controller.ConfigController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <FlowPane hgap="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="用户类型" />
                  <TextField fx:id="userTypes" prefHeight="30.0" prefWidth="300.0" promptText="学生，老师" />
               </children>
            </FlowPane>
            <FlowPane hgap="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="用户状态" />
                  <TextField fx:id="userStatus" prefHeight="30.0" prefWidth="300.0" promptText="正常，停用" />
               </children>
            </FlowPane>
            <FlowPane hgap="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="用户分组" />
                  <TextField fx:id="userGroups" prefHeight="30.0" prefWidth="300.0" promptText="初一1班，初一2班" />
               </children>
            </FlowPane>
            <FlowPane hgap="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="设备状态" />
                  <TextField fx:id="deviceStatus" prefHeight="30.0" prefWidth="300.0" promptText="正常，停用" />
               </children>
            </FlowPane>
            <FlowPane hgap="20.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="设备分组" />
                  <TextField fx:id="deviceGroups" prefHeight="30.0" prefWidth="300.0" promptText="大门，教学楼，办公楼，食堂" />
               </children>
            </FlowPane>
            <FlowPane hgap="20.0">
               <children>
                  <Button onAction="#save" mnemonicParsing="false" text="保存全部">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-success" />
                     </styleClass>
                  </Button>
                  <Button onAction="#reset" mnemonicParsing="false" text="重置默认">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-primary" />
                     </styleClass>
                  </Button>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </FlowPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
